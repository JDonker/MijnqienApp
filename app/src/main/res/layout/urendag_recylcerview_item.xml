<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/reisRecyclerViewItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"

    >



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/urenperdagkaart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/qienWit">


            <TextView
                android:id="@+id/txtdatum"
                android:layout_width="160dp"
                android:layout_height="33dp"
                android:text="@string/datum"
                android:paddingLeft="12dp"
                android:textSize="20dp"
                android:textColor="@color/qienPaars"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtopdracht"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="218dp"
                tools:layout_editor_absoluteY="4dp"
                app:layout_constraintStart_toEndOf="@id/txtdatum"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/txtoveruren"
                android:layout_width="40dp"
                android:paddingLeft="2dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="218dp"
                tools:layout_editor_absoluteY="4dp"
                app:layout_constraintStart_toEndOf="@id/txtopdracht"
                app:layout_constraintTop_toTopOf="parent"
                />



        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>